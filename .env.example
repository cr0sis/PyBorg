# PyBorg Environment Configuration Template
# Copy this file to .env and configure your values

# Network Configuration
NETWORK_NAME=mynetwork

# Authentication (optional)
NICKSERV_PASSWORD=your_nickserv_password_here

# API Keys (optional)
GEMINI_API_KEY=your_google_gemini_api_key_here
TWITCH_CLIENT_ID=your_twitch_client_id_here  
TWITCH_CLIENT_SECRET=your_twitch_client_secret_here

# Bot Behavior
AUTO_REJOIN=true
REJOIN_DELAY=5
RATE_LIMIT_MESSAGES=4
RATE_LIMIT_PERIOD=8
MAX_CHAT_CONTEXT=20
MAX_CONVERSATION_HISTORY=3

# Admin Users (comma-separated)
ADMIN_USERS=your_username,another_admin
ADMIN_HOSTMASKS=*!*@your.hostname.com

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Database (optional override)
DATABASE_URL=sqlite:///mynetwork_bot.db